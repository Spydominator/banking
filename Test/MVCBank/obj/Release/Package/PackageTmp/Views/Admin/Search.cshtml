@model IEnumerable<MVCBank.Customer>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    @Html.AntiForgeryToken()
@using (Html.BeginForm("Search", "Admin", new { tbvalue = "tbvalue", dropvalue = "Customers" }, FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>Search</h4>
        <hr />


        <div class="form-group">
            @Html.Label("Text", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("tbvalue", new { htmlAttributes = new { @class = "form-control" }  })
                @Html.ValidationMessage("tbvalue", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Search by", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("dropvalue", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("Field cannot be empty", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Cauta" class="btn btn-primary" />
            </div>
        </div>
        <table class="table table-bordered table-condensed table-hover">
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Date of birth")
                </th>
                <th>
                    @Html.DisplayName("Phone")
                </th>
                <th>
                    @Html.DisplayName("Address")
                </th>
                <th>
                    @Html.DisplayName("IBAN")
                </th>
                <th>
                    @Html.DisplayName("Account type")
                </th>
                <th>
                    @Html.DisplayName("Balance")
                </th>
                <th>
                    @Html.DisplayName("Card number")
                </th>
                <th>
                    @Html.DisplayName("PIN")
                </th>
                <th>
                    @Html.DisplayName("Branch")
                </th>
                <th></th>
            </tr>
@if (Model != null)
{
    foreach (var item in Model)
    {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cust_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dob)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contact_no)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cust_add)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.a_c_no)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.a_c_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.card_no)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.card_pin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bank.b_branch_name)
        </td>
        <td>
            <div class="btn-group-vertical btn-group-xs">
                @Html.ActionLink("Edit", "Edit", new { id = item.cust_id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Details", "Details", new { id = item.cust_id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "Delete", new { id = item.cust_id }, new { @class = "btn btn-danger" })
                @Html.ActionLink("History", "History", new { acc_no = item.a_c_no }, new { @class = "btn btn-info" })
            </div>
        </td>
    </tr>
    }
}

            </table>

            
</div>

}
<div>
    @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-primary btn-sm" })
</div>
       
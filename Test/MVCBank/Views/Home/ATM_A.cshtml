@model MVCBank.A_ATM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/sweetalert.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/sweetalert.css">

<h3>Manage ATMs</h3>
</br>
@using (Html.BeginForm("ATM_A", "Home", FormMethod.Post))
{
    <div class="container">
        <form class="form-horizontal">
            <div class="form-group">
                @Html.Label("Card number", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-credit-card"></i></span>
                    @Html.TextBoxFor(m => m.a_admin_name, null, new { @class = "form-control valid text-danger", @data_val = "true", @data_val_required = "Username is required" })
                    @Html.ValidationMessageFor(m => m.a_admin_name, "", new { @class = "text - danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.Label("PIN", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.PasswordFor(m => m.a_admin_pin, new { @class = "form-control valid text-danger", @data_val = "true", @data_val_required = "Password is required" })

                    @Html.ValidationMessageFor(m => m.a_admin_pin, "", new { @class = "text- danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Submit" class="btn btn-primary btn-group-sm" />
                </div>
            </div>
        </form>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                swal("Failed","@ViewBag.Message", "error")
            });
        </script>
    }
}
@model IEnumerable<MVCBank.ATM>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    @Html.AntiForgeryToken()
@using (Html.BeginForm("Search", "ATMs", new { tbvalue = "tbvalue", dropvalue = "Customers" }, FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>Search</h4>
        <hr />


        <div class="form-group">
            @Html.Label("Text", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("tbvalue", new { htmlAttributes = new { @class = "form-control" }  })
                @Html.ValidationMessage("tbvalue", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Search by", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("dropvalue", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("Field cannot be empty", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
        <table class="table table-bordered table-condensed table-hover">
            <tr>
                <th>
                    @Html.DisplayName("ATM Branch")
                </th>
                <th>
                    @Html.DisplayName("Admin Address")
                </th>
                <th>
                    @Html.DisplayName("ATM cash")
                </th>
                <th>
                    @Html.DisplayName("Admin name")
                </th>
                <th>
                    @Html.DisplayName("Bank branch")
                </th>
                <th></th>
            </tr>
@if (Model != null)
{
    foreach (var item in Model)
    {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.a_branch_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.a_branch_add)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.available_cash)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.A_ATM.a_admin_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bank.b_branch_name)
        </td>
        
        <td>
            <div class="btn-group-xs">
                @Html.ActionLink("Edit", "Edit", new { id = item.a_branch_id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.a_branch_id }, new { @class = "btn btn-danger" })
            </div>
        </td>
    </tr>
    }
}

            </table>

            
</div>

}
<div>
    @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-primary btn-sm" })
</div>
       